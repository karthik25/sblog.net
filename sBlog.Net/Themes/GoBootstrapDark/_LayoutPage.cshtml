<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    @Html.GetCommonScriptsAndStyles()
    @Html.LoadStylesAndScripts(Html.Action("GetBlogTheme", "Blog").ToString())
</head>
<body>
@Html.Partial("AdminLinks")
<div id="wrapper">
	<div id="header-wrapper">
		<div id="header">
			<div id="logo">
				@Html.Action("Logo", "Blog")
			</div>
			<div id="menu">
				@Html.Action("Pages", "ViewPage")
                <img id="more-pages" src="@Url.Content("~/Content/Images/arrow.png")" alt="more pages" />
			</div>
		</div>
	</div>
	<!-- end #header -->
	<div id="page">
		<div id="pagecontent">
			@RenderBody()
		</div>
		<!-- end #content -->		
		<div style="clear: both;">&nbsp;</div>
	</div>
	<!-- end #page -->
</div>
<div class="limelight">
    <div class="row-fluid">
        <div class="span2">
            @Html.Action("RecentPosts", "Recents")
        </div>
        <div class="span2">
            @Html.Action("RecentComments", "Comment")
        </div>
        <div class="span2">
            @Html.Action("BlogArchives", "Recents")
        </div>
        <div class="span2">
            @Html.Action("BlogCategories", "Category")
        </div>
        <div class="span2">
            @Html.Partial("SiteActions")
        </div>
    </div>
    <br/>
    <div id="footer">
        @Html.Action("BlogFooter","Blog")
    </div>
</div>
<!-- end #footer -->
</body>
</html>
